<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@color/color_video_player_play_pause_pressed"/>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/video_player_pause_icon" android:tileMode="disabled"/>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="false">
        <bitmap android:gravity="center" android:src="@drawable/video_player_pause_icon" android:tileMode="disabled"/>
    </item>

</selector>