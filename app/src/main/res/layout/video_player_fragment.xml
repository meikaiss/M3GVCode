<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <FrameLayout
        android:id="@+id/real_video_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <com.m3gv.news.common.view.M3CloudVideoView
            android:id="@+id/m3_video_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="visible"/>

        <ProgressBar
            android:id="@+id/progress_video_loading"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:indeterminateDrawable="@drawable/progress_bar_animator"/>

        <TextView
            android:id="@+id/tv_re_play"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/video_re_play_btn_btn"
            android:drawableLeft="@drawable/video_complete_replay"
            android:drawablePadding="20dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="重播"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:visibility="gone"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/video_player_controller_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/color_video_player_controller_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/play_or_pause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/video_player_play_icon_selector"
                android:scaleType="centerInside"
                android:visibility="visible"/>

            <SeekBar
                android:id="@+id/controller_seek_bar"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:progress="0"
                android:progressDrawable="@drawable/video_seekbar_selector"
                android:thumb="@drawable/video__seekbar_thumb"
                android:thumbOffset="0dp"/>

            <TextView
                android:id="@+id/time_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:paddingLeft="0dip"
                android:paddingRight="0dip"
                android:text="00:00"
                android:textColor="#eee"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="0dip"
                android:paddingRight="0dip"
                android:text="/"
                android:textColor="#eee"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/time_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="0dip"
                android:paddingRight="0dip"
                android:text="00:00"
                android:textColor="#eee"
                android:textSize="13sp"
                android:textStyle="normal"/>

            <ImageButton
                android:id="@+id/fullscreen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/video_player_fullscreen_entry_selector"
                android:scaleType="centerInside"/>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>