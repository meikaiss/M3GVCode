<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_white_selector"
    android:orientation="horizontal"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_video_news_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_normal_gray"
            android:textSize="@dimen/text_size_title_big"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_mini_description"
                android:textSize="@dimen/text_size_mini_description"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="次播放"
                android:textColor="@color/text_color_mini_description"
                android:textSize="@dimen/text_size_mini_description"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞:"
                android:textColor="@color/text_color_mini_description"
                android:textSize="@dimen/text_size_mini_description"/>

            <TextView
                android:id="@+id/tv_zan_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:textColor="@color/text_color_mini_description"
                android:textSize="@dimen/text_size_mini_description"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="踩:"
                android:textColor="@color/text_color_mini_description"
                android:textSize="@dimen/text_size_mini_description"/>

            <TextView
                android:id="@+id/tv_cai_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:textColor="@color/text_color_mini_description"
                android:textSize="@dimen/text_size_mini_description"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_video_news_list_thumbs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#b0b0b0"
        android:minHeight="60dp"/>

</LinearLayout>