<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/skill_root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    tools:showIn="@layout/hero_detail_activity">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="技能介绍"
        android:textColor="@color/text_color_normal_gray"
        android:textSize="16dp"/>

    <com.m3gv.news.common.view.magicindicator.MagicIndicator
        android:id="@+id/skill_magic_indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"/>

    <com.m3gv.news.common.view.AutoHeightViewPager
        android:id="@+id/skill_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>